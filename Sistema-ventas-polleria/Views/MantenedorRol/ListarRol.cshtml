@model IEnumerable<capa.entRol>

@{
    ViewData["Title"] = "ListarRol";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

@functions {
    string MostrarEstado(int estado)
    {
        return estado == 1
            ? "<span class='badge bg-success'>Activo</span>"
            : "<span class='badge bg-danger'>Inactivo</span>";
    }
}

<div class="bg-white shadow rounded p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 fw-bold">Roles Registrados</h1>
        <a class="btn btn-success" href="@Url.Action("InsertarRol", "MantenedorRol")" aria-label="Agregar nuevo rol">
            <i class="fas fa-plus"></i> Nuevo Rol
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.idRol)</th>
                    <th>@Html.DisplayNameFor(model => model.nombreRol)</th>
                    <th>@Html.DisplayNameFor(model => model.estado)</th>


                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.idRol</td>
                        <td>@item.nombreRol</td>

                        <td>@Html.Raw(MostrarEstado(item.estado))</td>
                        <td class="text-center">
                            @Html.ActionLink("Edit", "EditaRol", new { idRol = item.idRol }) |
                            @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                            @Html.ActionLink("Delete", "DeshabilitaRol", new { idRol = item.idRol })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>