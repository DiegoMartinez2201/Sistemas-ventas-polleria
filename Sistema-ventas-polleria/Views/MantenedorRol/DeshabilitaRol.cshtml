@model capa.entRol

@{
    ViewData["Title"] = "Deshabilitar Rol";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid bg-gradient bg-light py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <!-- Header Card -->
            <div class="card border-0 shadow-lg mb-4">
                <div class="card-header bg-danger bg-gradient text-white text-center py-4">
                    <div class="display-6 mb-3">
                        <i class="fas fa-exclamation-triangle me-3"></i>Deshabilitar Rol
                    </div>
                    <p class="lead mb-0 opacity-75">Confirmación de acción crítica</p>
                </div>
            </div>

            <!-- Main Content Card -->
            <div class="card border-0 shadow-lg">
                <div class="card-body p-5">
                    <!-- Warning Alert -->
                    <div class="alert alert-warning alert-dismissible fade show border-0" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-exclamation-triangle fs-4 me-3 text-warning"></i>
                            <div>
                                <h5 class="alert-heading mb-1">¡Atención!</h5>
                                <p class="mb-0">Esta acción puede afectar a los usuarios que tengan este rol asignado. La operación no se puede deshacer.</p>
                            </div>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>

                    <!-- Role Information Section -->
                    <div class="row g-4 mb-5">
                        <div class="col-12">
                            <h4 class="text-primary border-bottom border-2 border-primary pb-2 mb-4">
                                <i class="fas fa-info-circle me-2"></i>Información del Rol
                            </h4>
                        </div>

                        <!-- ID Rol -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control bg-light border-2" id="idRol" value="@Model.idRol" readonly>
                                <label for="idRol" class="fw-bold">
                                    <i class="fas fa-hashtag me-1"></i>ID del Rol
                                </label>
                            </div>
                        </div>

                        <!-- Nombre del Rol -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control bg-light border-2" id="nombreRol" value="@Model.nombreRol" readonly>
                                <label for="nombreRol" class="fw-bold">
                                    <i class="fas fa-user-tag me-1"></i>Nombre del Rol
                                </label>
                            </div>
                        </div>

                        <!-- Estado Actual -->
                        <div class="col-12">
                            <div class="form-floating">
                                <div class="form-control bg-light border-2 d-flex align-items-center">
                                    <span class="badge @(Model.estado == 1 ? "bg-success" : "bg-danger") fs-6 px-3 py-2">
                                        <i class="fas @(Model.estado == 1 ? "fa-check-circle" : "fa-times-circle") me-2"></i>
                                        @(Model.estado == 1 ? "Activo" : "Inactivo")
                                    </span>
                                </div>
                                <label class="fw-bold">
                                    <i class="fas fa-toggle-on me-1"></i>Estado Actual
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="row">
                        <div class="col-12">
                            <hr class="my-4 border-2">
                            <div class="d-grid gap-3 d-md-flex justify-content-md-end">
                                <a asp-action="ListarRol" class="btn btn-outline-secondary btn-lg px-5 py-3">
                                    <i class="fas fa-arrow-left me-2"></i>
                                    <span class="fw-bold">Cancelar</span>
                                </a>
                                <button type="submit" class="btn btn-danger btn-lg px-5 py-3 shadow-sm" form="deshabilitarForm">
                                    <i class="fas fa-ban me-2"></i>
                                    <span class="fw-bold">Confirmar Deshabilitación</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Additional Info Card -->
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <i class="fas fa-shield-alt text-info fs-1"></i>
                        </div>
                        <div class="col">
                            <h6 class="mb-1 fw-bold text-dark">Seguridad del Sistema</h6>
                            <p class="mb-0 text-muted small">Esta acción está registrada en el sistema para auditoría y seguimiento de cambios.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Hidden Form for Submission -->
<form id="deshabilitarForm" asp-action="ConfirmarDeshabilitarRol" method="post" style="display: none;">
    <input type="hidden" asp-for="idRol" />
</form>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Efecto de entrada con fade
            $('.card').hide().fadeIn(800);

            // Confirmación antes de enviar
            $('button[type="submit"]').on('click', function(e) {
                e.preventDefault();

                // Mostrar modal de confirmación personalizado
                if (confirm('¿Está completamente seguro de que desea deshabilitar este rol?\n\n⚠️ Esta acción:\n• No se puede deshacer\n• Puede afectar usuarios del sistema\n• Será registrada para auditoría')) {
                    $('#deshabilitarForm').submit();
                }
            });

            // Efectos hover en botones
            $('.btn').hover(
                function() {
                    $(this).addClass('shadow');
                },
                function() {
                    $(this).removeClass('shadow');
                }
            );

            // Tooltips para iconos
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}