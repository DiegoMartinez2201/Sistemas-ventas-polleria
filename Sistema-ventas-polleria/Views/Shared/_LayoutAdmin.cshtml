<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Dashboard Admin Template by Tooplate.com</title>
    <!--

    Template 2108 Dashboard

    http://www.tooplate.com/view/2108-dashboard

    -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600">
    <!-- https://fonts.google.com/specimen/Open+Sans -->
    <link rel="stylesheet" href="~/css/fontawesome.min">
    <!-- https://fontawesome.com/ -->
    <link rel="stylesheet" href="~/css/fullcalendar.min.css">
    <!-- https://fullcalendar.io/ -->
    <link href="@Url.Content("~/lib/bootstrap/dist/css/bootstrap.min.css")" rel="stylesheet">
    <!-- https://getbootstrap.com/ -->
    <link rel="stylesheet" href="~/css/tooplate.css">
    <link href="@Url.Content("~/css/bootstrap-icons.css")" rel="stylesheet">
    <link href="@Url.Content("~/css/vegas.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/css/tooplate-barista.css")" rel="stylesheet">
    <link rel="stylesheet" href="~/css/admin-custom.css" />
</head>
<body id="reportsPage">
    <div class="" id="home">
        <div class="container" style="margin-top: 150px;">
            <div class="row">
                <div class="col-12">
                    <nav class="navbar navbar-expand-xl navbar-light bg-light">
                        <a class="navbar-brand d-flex align-items-center" href="#">
                            <i class="fas fa-3x fa-tachometer-alt tm-site-icon"></i>
                            <h1 class="tm-site-title mb-0 ms-2">Dashboard</h1>
                        </a>
                        <button class="navbar-toggler ml-auto mr-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav mx-auto flex-wrap w-100">
                                <li class="nav-item">
                                    <a class="nav-link active" href="#">
                                        Dashboard
                                        <span class="sr-only">(current)</span>
                                    </a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true"
                                       aria-expanded="false">
                                        Reports
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item" href="#">Daily Report</a>
                                        <a class="dropdown-item" href="#">Weekly Report</a>
                                        <a class="dropdown-item" href="#">Yearly Report</a>
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("ListarTamaño", "MantenedorTamaño")">Tamaño</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("ListarCategoria", "MantenedorCategoria")">Categoria</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("ListarMarca", "MantenedorMarca")">Marca</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("ListarMetodoDePago", "MantenedorMetodoDePago")">Metodo de Pago</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("ListarUsuario", "MantenedorUsuario")">Usuarios</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("ListarRol", "MantenedorRol")">Roles</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("ListarProducto", "MantenedorProducto")">Productos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("ListarCombo", "MantenedorCombo")">Combo</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("ListarEstado", "MantenedorEstado")">Estado</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("ListarFormaEnvio", "MantenedorFormaEnvio")">Forma de Envio</a>
                                </li>
                            </ul>
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link d-flex" href="@Url.Action("Logout", "Cuenta")">
                                        <i class="far fa-user mr-2 tm-logout-icon"></i>
                                        <span>Logout</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
            <div>
                @RenderBody()
            </div>
            <script src="@Url.Content("~/js/jquery.min.js")"></script>
            <script src="~/js/moment.min.js"></script>
            <!-- https://momentjs.com/ -->
            <script src="~/js/utils.js"></script>
            <script src="~/js/Chart.min.js"></script>
            <!-- http://www.chartjs.org/docs/latest/ -->
            <script src="~/js/fullcalendar.min.js"></script>
            <!-- https://fullcalendar.io/ -->
            <script src="@Url.Content("~/js/bootstrap.min.js")"></script>
            <!-- https://getbootstrap.com/ -->
            <script src="~/js/tooplate-scripts.js"></script>
            <script src="@Url.Content("~/js/jquery.sticky.js")"></script>
            <script src="@Url.Content("~/js/click-scroll.js")"></script>
            <script src="@Url.Content("~/js/vegas.min.js")"></script>
            <script src="@Url.Content("~/js/custom.js")"></script>
            <script>
                let ctxLine,
                    ctxBar,
                    ctxPie,
                    optionsLine,
                    optionsBar,
                    optionsPie,
                    configLine,
                    configBar,
                    configPie,
                    lineChart;
                barChart, pieChart;
                // DOM is ready
                $(function () {
                    updateChartOptions();
                    drawLineChart(); // Line Chart
                    drawBarChart(); // Bar Chart
                    drawPieChart(); // Pie Chart
                    drawCalendar(); // Calendar

                    $(window).resize(function () {
                        updateChartOptions();
                        updateLineChart();
                        updateBarChart();
                        reloadPage();
                    });
                })
            </script>
            @RenderSection("Scripts", required: false)
        </div>
    </div>

</body>
</html>
