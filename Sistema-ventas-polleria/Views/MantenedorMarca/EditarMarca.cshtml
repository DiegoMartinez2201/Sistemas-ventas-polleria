@model capa.entMarca

@{
    ViewData["Title"] = "EditarMarca";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>EditarMarca</h1>

<h4>entMarca</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarMarca">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="idMarca" class="control-label"></label>
                <input asp-for="idMarca" class="form-control" />
                <span asp-validation-for="idMarca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nombreMarca" class="control-label"></label>
                <input asp-for="nombreMarca" class="form-control" />
                <span asp-validation-for="nombreMarca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="estado" class="control-label"></label>
                <input asp-for="estado" class="form-control" />
                <span asp-validation-for="estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Volver", "ListarMarca")
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
