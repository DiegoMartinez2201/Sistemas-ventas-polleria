@model capa.entMetodoDePago

@{
    ViewData["Title"] = "EditarMetodoDePago";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>EditarMetodoDePago</h1>

<h4>entMetodoDePago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarMetodoDePago">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="idMetodoPago" class="control-label"></label>
                <input asp-for="idMetodoPago" class="form-control" />
                <span asp-validation-for="idMetodoPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nombreMetodo" class="control-label"></label>
                <input asp-for="nombreMetodo" class="form-control" />
                <span asp-validation-for="nombreMetodo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="estado" class="control-label"></label>
                <input asp-for="estado" class="form-control" />
                <span asp-validation-for="estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Volver", "ListarMetodoDePago")
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
