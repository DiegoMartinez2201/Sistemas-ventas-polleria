@model IEnumerable<capa.entPedidoDelivery>

@{
    Layout = "~/Views/Shared/_LayoutDelivery.cshtml"; // Cambia el layout si tienes uno diferente
    ViewData["Title"] = "Pedidos Delivery";


}

<
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th class="text-center">IdPedido</th>
                        <th class="text-center">Direccion</th>
                        <th class="text-center">Estado</th>
                    </tr>
                </thead>
                 <tbody>
                    @if (Model != null && Model.Any())
                    {
                       foreach (var pedido in Model)
                        {
                            <tr>
                                <td class="text-center">@pedido.IdPedido</td>
                                <td class="text-center">@pedido.Direccion</td>
                                <td class="text-center">@pedido.Estado</td>
                            </tr>
                         }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center">No hay pedidos registrados.</td>
                        </tr>
                    }   
                </tbody>   
            </table>
        </div>
    }

