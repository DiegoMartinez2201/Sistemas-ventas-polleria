@model Sistema_ventas_polleria.Models.PedidoEstadoViewModel

@{
    ViewData["Title"] = "Cambiar Estado de Pedido";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="IdPedido" />

    <div class="form-group">
        <label asp-for="IdEstadoNuevo"></label>
        <select asp-for="IdEstadoNuevo" asp-items="Model.Estados" class="form-control">
            <option value="">-- Selecciona un estado --</option>
        </select>
        <span asp-validation-for="IdEstadoNuevo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
