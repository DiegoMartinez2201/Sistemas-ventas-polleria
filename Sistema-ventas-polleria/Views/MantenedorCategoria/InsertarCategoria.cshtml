@model capa.entCategoria

@{
    ViewData["Title"] = "InsertarCategoria";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg p-4" style="max-width: 500px; width: 100%;">
        <div class="card-body">
            <h2 class="card-title text-center mb-3 font-weight-bold">Registrar Nueva Categoría</h2>
            <p class="text-center text-muted mb-4">Completa los datos para agregar una nueva categoría al sistema.</p>
            <form asp-action="InsertarCategoria" autocomplete="off">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="nombreCategoria" class="control-label"></label>
                    <input asp-for="nombreCategoria" class="form-control" placeholder="Nombre de la Categoría" />
                    <span asp-validation-for="nombreCategoria" class="text-danger"></span>
                </div>
                <!-- Estado por defecto a 1 (Activo) -->
                <input type="hidden" asp-for="estado" value="1" />
                <div class="form-group text-center">
                    <input type="submit" value="Registrar" class="btn btn-primary btn-lg w-100" />
                </div>
            </form>
            <div class="text-center mt-3">
                <a asp-action="ListarCategoria" class="btn btn-link">Volver a la lista</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
