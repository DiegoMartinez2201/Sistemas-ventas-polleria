@model IEnumerable<capa.entCategoria>

@{
    ViewData["Title"] = "ListarCategoria";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>ListarCategoria</h1>

<p>
    @Html.ActionLink("Inserta", "InsertarCategoria")
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idCategoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombreCategoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idCategoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombreCategoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            <td>
                    @Html.ActionLink("Edit", "EditarCategoria", new { idCategoria = item.idCategoria }) |
                    @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                    @Html.ActionLink("Delete", "DeshabilitarCategoria", new { idCategoria = item.idCategoria })
            </td>
        </tr>
}
    </tbody>
</table>
