@model capa.entCombo

@{
    ViewData["Title"] = "Deshabilitar Combo";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
            <div class="card border-danger shadow-lg">
                <div class="card-header bg-danger text-white text-center py-4">
                    <h2 class="mb-2">
                        <i class="fas fa-exclamation-triangle me-2"></i>Deshabilitar Combo
                    </h2>
                    <p class="lead mb-0">¿Estás seguro que deseas deshabilitar este combo?</p>
                </div>
                <div class="card-body p-5">
                    <div class="alert alert-warning d-flex align-items-center mb-4" role="alert">
                        <i class="fas fa-exclamation-circle fa-2x me-3"></i>
                        <div>
                            Esta acción no eliminará el combo, pero lo dejará inactivo y no estará disponible para ventas.
                        </div>
                    </div>
                    <dl class="row mb-0">
                        <dt class="col-sm-4">ID Combo</dt>
                        <dd class="col-sm-8">@Model.idCombo</dd>
                        <dt class="col-sm-4">Nombre</dt>
                        <dd class="col-sm-8">@Model.nombreCombo</dd>
                        <dt class="col-sm-4">Descripción</dt>
                        <dd class="col-sm-8">@Model.descripcion</dd>
                        <dt class="col-sm-4">Precio Venta</dt>
                        <dd class="col-sm-8">S/ @Model.precioVenta.ToString("F2")</dd>
                        <dt class="col-sm-4">Estado</dt>
                        <dd class="col-sm-8">
                            @if (Model.estado == 1)
                            {
                                <span class="badge bg-success"><i class="fas fa-check me-1"></i>Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-danger"><i class="fas fa-times me-1"></i>Inactivo</span>
                            }
                        </dd>
                    </dl>
                </div>
                <div class="card-footer bg-white text-end py-4">
                    <form asp-action="ConfirmarDeshabilitarRol" class="d-inline">
                        <input type="hidden" name="idCombo" value="@Model.idCombo" />
                        <input type="submit" value="Deshabilitar" class="btn btn-danger btn-lg px-4 me-2" />
                    </form>
                    <a asp-action="ListarCombo" class="btn btn-outline-secondary btn-lg px-4">
                        <i class="fas fa-arrow-left me-2"></i>Cancelar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
